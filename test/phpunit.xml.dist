<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="../../../autoload.php"
         colors="true">
    <testsuites>
        <testsuite name="zfc-system-config">
            <directory>./</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="../../../../build/coverage" title="ZfcSystem Config Module" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../../../../build/logs/clover-ZfcSystemConfig.xml"/>
        <log type="junit" target="../../../../build/logs/junit-ZfcSystemConfig.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>
